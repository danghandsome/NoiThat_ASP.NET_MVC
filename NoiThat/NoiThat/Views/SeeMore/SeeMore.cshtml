</html>
<script>
    function zoomIn(element) {
        element.style.transform = "scale(1.1) rotateX(5deg)";
        element.parentElement.querySelector('h1').style.transform = "rotateX(25deg) translateY(10px)";
        element.parentElement.querySelector('h5').style.transform = "rotateX(15deg) translateY(5px)";
        element.parentElement.querySelector('p').style.transform = "rotateX(10deg) translateY(2px)";
    }

    function zoomOut(element) {
        element.style.transform = "scale(1) rotateX(5deg)";
        element.parentElement.querySelector('h1').style.transform = "rotateX(25deg)";
        element.parentElement.querySelector('h5').style.transform = "rotateX(15deg)";
        element.parentElement.querySelector('p').style.transform = "rotateX(10deg)";
    }
    function applyNeonEffect(element) {
        element.classList.add("neon-active");
        setTimeout(function () {
            element.classList.remove("neon-active");
        }, 500);
    }

    function applyHoverEffect(element) {
        element.classList.add("neon-hover");
    }

    function removeHoverEffect(element) {
        element.classList.remove("neon-hover");
    }



</script>
<style>
    .button-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 0vh;
        margin: -60px auto 0 auto;
    }

    .neon-button {
        font-family: fantasy;
        text-align: center;
        display: inline-block;
        width: 200px;
        padding: 10px 20px;
        background-color: #F79118;
        color: #ffffff;
        text-decoration: none;
        font-size: 1.2em;
        border-radius: 10px;
        transform: rotateX(5deg);
        transition: opacity 0.2s, box-shadow 0.4s;
        margin: 20px;
        opacity: 0.7;
        /* Hiệu ứng neon mặc định */
        box-shadow: 0 0 10px #F79118, 0 0 20px #F79118, 0 0 30px #F79118, 0 0 40px #F79118;
    }

    .neon-hover {
        /* Hiệu ứng neon khi rê chuột vào */
        box-shadow: 0 0 10px #F79118, 0 0 20px #F79118, 0 0 30px #F79118, 0 0 40px #F79118;
        opacity: 1;
    }



</style>
