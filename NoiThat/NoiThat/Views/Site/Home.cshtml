@model IEnumerable<NoiThat.Models.Category>
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}

@section header{
    <link href="~/Public/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="~/Public/js/style.css" rel="stylesheet" />
}

<div class="container">
    @*========================= SECTION MAIN  =========================*@
    <section class="section-main padding-y">


        @Html.Action("Slideshow", "Module")

    </section>

    @*========================= SECTION MAIN END// =========================*@
    @*=============== SECTION 1 ===============*@
    <section class="padding-bottom">
        @foreach (var category in Model)
        {
            @Html.Action("HomeProduct", "Site", new { @id = category.id })

        }

        <div style=" width: 100%; margin-left: auto; margin-right: auto;" class="row">
            <div class="col text-center">
                <div style="font-family: 'Montserrat', sans-serif; padding: 40px; perspective: 1000px;">
                    <h1 style="font-family: 'Felix Titling' ;font-size: 3em; color: #343a40; font-weight: bold; letter-spacing: 3px; text-transform: uppercase; transform: rotateX(25deg); transition: transform 0.5s;">Our New Design</h1>
                </div>
            </div>
        </div>


        <div style="margin-top: 10px; width: 1420px; margin-left: auto; margin-right: auto; " id="slider" class="carousel slide" data-ride="carousel">

            <ul class="carousel-indicators">
                <li data-target="#demo" data-slide-to="0" class="active"></li>
                <li data-target="#demo" data-slide-to="1"></li>
                <li data-target="#demo" data-slide-to="2"></li>
                <li data-target="#demo" data-slide-to="3"></li>
                <li data-target="#demo" data-slide-to="4"></li>
                <li data-target="#demo" data-slide-to="5"></li>
            </ul>

            <div class="carousel-inner" style="border-radius: 20px;">
                <div class="carousel-item active">
                    <img src="~/Content/images/Pic/new-1.jpg" class="d-block w-100" alt="">
                </div>
                <div class="carousel-item">
                    <img src="~/Content/images/Pic/new-2.jpg" class="d-block w-100" alt="">
                </div>
                <div class="carousel-item">
                    <img src="~/Content/images/Pic/new-3.jpg" class="d-block w-100" alt="">
                </div>
                <div class="carousel-item">
                    <img src="~/Content/images/Pic/new-4.jpg" class="d-block w-100" alt="">
                </div>
                <div class="carousel-item">
                    <img src="~/Content/images/Pic/new-5.jpg" class="d-block w-100" alt="">
                </div>
                <div class="carousel-item">
                    <img src="~/Content/images/Pic/new-6.jpg" class="d-block w-100" alt="">
                </div>
            </div>


            <a class="carousel-control-prev" href="#slider" data-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </a>
            <a class="carousel-control-next" href="#slider" data-slide="next">
                <span class="carousel-control-next-icon"></span>
            </a>
        </div>


    </section>

</div>
@section scripts{
    <style>
        h1:hover {
            transform: rotateX(0deg);
        }

        .carousel-indicators li:hover {
            opacity: 0.7; /* Thay đổi độ trong suốt khi hover */
        }
    </style>

    <!-- Kích hoạt chức năng tự động trượt qua các ảnh của carousel -->
    <script>
        $(document).ready(function () {
            $('#slider').carousel({
                interval: 3000 // Thời gian trì hoãn giữa các slide, ở đây là 3 giây
            });
        });
    </script>
}

@*container end.//*@

