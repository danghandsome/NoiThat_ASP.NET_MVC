@model NoiThat.Models.User

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Main content -->
    <section class="content my-2">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <strong>Chi tiết khách hàng</strong>
                    </div>
                    <div class="col-6 text-right">

                        <a href="@Url.Action("Edit","User", new { id = Model.id })" class="btn btn-sm btn-info"><i class="fa fa-edit"></i> Cập nhật</a>
                        <a href="@Url.Action("Index","User")" class="btn btn-sm btn-info"><i class="fa fa-backward"></i> Về danh sách</a>

                    </div>
                </div>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <tr>
                        <th style="width:120px">Tên trường</th>
                        <th>Nội dung</th>
                    </tr>
                    <tr>
                        <td>
                            Họ và tên
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.FullName)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Email
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Email)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Link hình ảnh
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Img)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Địa chỉ
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Address)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Số điện thoại
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Phone)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Giới tính
                        </td>
                        <td>
                            @if (Model.Gender == 1)
                            {
                                <label>Nam</label>
                            }
                            else
                            {
                                <label>Nữ</label>
                            }
                        </td>
                    </tr>

                    <tr>
                        <td>
                            Chức vụ
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Roles)
                        </td>
                    </tr>

                </table>

            </div>
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
