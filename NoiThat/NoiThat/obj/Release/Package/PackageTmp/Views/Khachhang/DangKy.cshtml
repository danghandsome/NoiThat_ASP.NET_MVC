@model NoiThat.Models.User
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}

@using (Html.BeginForm("DangKy", "Khachhang", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    <!-- ========================= SECTION CONTENT ========================= -->
    <section class="section-content padding-y">

        <!-- ============================ COMPONENT REGISTER   ================================= -->
        <div class="card mx-auto" style="max-width:520px; margin-top:40px;">
            <article style="background-color: floralwhite;" class="card-body">
                <header class="mb-4"><h4 class="card-title">Đăng Ký</h4></header>
                <form>
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    @Html.AntiForgeryToken()
                    @Html.Raw(ViewBag.Error)

                    <div class="form-group">
                        <label>Tên đăng nhập</label>
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Mật khẩu</label>
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Nhập lại mật khẩu</label>
                        <div class="col-md-10">
                            <input class="form-control" name="RePassword" type="password">
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Họ và tên</label>
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.FullName, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 col-form-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Điện thoại</label>
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Địa chỉ</label>
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Giới tính</label>
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.Gender, new[] { new SelectListItem { Text = "Nữ", Value = "2" }, new SelectListItem { Text = "Nam", Value = "1" } }, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
                        </div>

                    </div>
                    <div class="form-group">
                        <button style= "background-color:burlywood" type="submit" class="btn btn-primary btn-block"> Đăng ký  </button>
                    </div> <!-- form-group// -->

                </form>
            </article><!-- card-body.// -->
        </div> <!-- card .// -->
        <p style="color:white" class="text-center mt-4">Đã có tài khoản? <a style="color:white" href="~/dang-nhap"> Tới đăng nhập</a></p>
        <br><br>
    </section>
}
<video autoplay muted loop id="myVideo" style="position: fixed; right: 0; bottom: 0; min-width: 100%; min-height: 100%;">
    <source src="~/Content/images/demo.mp4" type="video/mp4">
</video>
<style>
    #myVideo {
        z-index: -1;
    }
</style>