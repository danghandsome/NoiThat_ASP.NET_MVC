        text-align: center;
        margin-top: 40px;
        margin-bottom: 30px;
        font-size: 28px;
    }

    /* Định dạng form */
    .form-horizontal {
        max-width: 600px;
        margin: 0 auto;
    }

    /* Định dạng label và input */
    .control-label {
        font-weight: bold;
    }

    /* Định dạng các form group */
